<!-- Healing Potions -->
	<element name="Potion of Healing" type="Magic Item" source="Dungeon Master’s Guide 2024" id="ID_WOTC_DMG24_MAGIC_ITEM_POTION_OF_HEALING">
		<description>
			<p>The creature that drinks the magical red fluid in this vial regains 2d4 + 2 Hit Points. The potion's red liquid glimmers when agitated.</p>
		</description>
		<setters>
			<set name="keywords">healing</set>
			<set name="category">Potions</set>
			<set name="cost" currency="gp">50</set>
			<set name="weight" lb="0.5">½ lb.</set>
			<set name="type">Potion</set>
			<set name="rarity">Common</set>
			<set name="stackable">true</set>
		</setters>
	</element>
